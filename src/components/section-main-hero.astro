<section class="section-main-hero">
  <h1 class="section-main-hero__title text--3xl font--extrabold">Duy Huynh</h1>
  <p class="section-main-hero__desc">
    Full-Stack Developer crafting minimal, elegant web experiences.
  </p>
  <div class="section-main-hero__nav-group">
    <a
      class="section-main-hero__nav-group__nav-item section-main-hero__nav-group__nav-item--primary"
      href="/projects"
      role="button"
      aria-label="View My Work"
      tabindex="0">View My Work</a
    >
    <a
      class="section-main-hero__nav-group__nav-item section-main-hero__nav-group__nav-item--secondary"
      href="/contact"
      role="button"
      aria-label="Get In Touch"
      tabindex="0"
      >Get In Touch
    </a>
  </div>

  <style>
    .section-main-hero {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      border-bottom: var(--border-default);
      width: 100%;
      height: 400px;
    }
    .section-main-hero__title {
      text-align: center;
    }
    .section-main-hero__desc {
      color: gray;
      text-align: center;
    }
    .section-main-hero__nav-group {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
    .section-main-hero__nav-group__nav-item {
      display: inline-flex;
      align-content: center;
      justify-content: center;
      border-radius: 0.5rem;
      padding: 1rem 2rem;
    }
    .section-main-hero__nav-group__nav-item:hover {
      cursor: pointer;
      text-decoration: none;
    }
    .section-main-hero__nav-group__nav-item--primary {
      background-color: black;
      color: white;
    }
    .section-main-hero__nav-group__nav-item--secondary {
      border: var(--border-default);
    }

    html[color-scheme="dark"] .section-main-hero__nav-group__nav-item--primary {
      background-color: white;
      color: black;
    }
  </style>
</section>
